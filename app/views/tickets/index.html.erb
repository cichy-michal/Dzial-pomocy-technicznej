
<h1>Tickets</h1>

<div id="tickets">
  <% @tickets.each do |ticket| %>
  <% if @employee.user == current_user && ticket.employee_id == @employee.id %>
    <%= render ticket %>
    <p>
      <%= link_to "Show this ticket", ticket %>
    </p>
  <% end %>
  <% end %>
</div>

<%= link_to "New ticket", new_ticket_path %>
