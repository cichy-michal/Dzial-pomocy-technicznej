
<h1>Dane osobowe</h1>

<div id="employees">


  <% @employees.each do |employee| %>

  <% if employee.user == current_user %>

    <%= render employee %>
    <p>
      <%= link_to "Show this employee", employee %>
    </p>
  <% end %>
<% end %>

</div>

<% unless @employees.any? { |employee| employee.user == current_user } %>
<%= link_to "New employee", new_employee_path %>
<% end %>
